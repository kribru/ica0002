vrrp_script check_haproxy {
    script "/usr/local/bin/keepalived_script"
    weight 20
    interval 1
}

vrrp_instance VIP  {
    interface ens3
    virtual_router_id 1
    {% if inventory_hostname == "kribru-1" %}
    priority 100
    {% else %}
    priority 99
    {% endif %}
    advert_int 1
    virtual_ipaddress {
        192.168.100.{{ (hostvars["kribru-1"]['ansible_default_ipv4']['address'] | split("."))[3] }}/24
    }
    unicast_peer {
        {% for vm in groups["web_servers"] %}
        {% if inventory_hostname != vm %}
        {{ hostvars[vm]['ansible_default_ipv4']['address'] }}
        {% endif %}
        {% endfor %}
    }
    track_script {
        check_haproxy
    }
}
